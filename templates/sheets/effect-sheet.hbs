<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <div class="flex header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
            <div class="flex">
                <label>{{localize "WITCHER.Effect.isActive"}}
                    <input type="checkbox" name="system.isActive" {{checked item.system.isActive}} />
                </label>
                <label>{{localize "WITCHER.Effect.isHUD"}}
                    <input type="checkbox" name="system.isHUD" {{checked item.system.isHUD}} />
                </label>
            </div>
        </div>
    </header>
    <label><b>{{localize "WITCHER.Item.Description"}}</b></label>
    <textarea rows=5 name="system.description">{{item.system.description}}</textarea>
    <div class="flex">
        <div class="effect-column">
            <b>{{localize "WITCHER.Actor.StatTitle.LableLeft"}} </b><a class="add-modifier-stat"><i
                    class="fas fa-plus"></i></a>
            {{#each item.system.stats as |stat index|}}
                <div class="flex list-item" data-id="{{stat.id}}" data-type="stat">
                    <a class="remove-modifier-stat"><i class="fas fa-minus"></i></a>
                    <select class="modifiers-edit" data-field="stat">
                        {{#select stat.stat}}
                            <option value="none"></option>
                            <option value="WITCHER.Actor.Stat.Int">{{localize "WITCHER.Actor.Stat.Int"}}</option>
                            <option value="WITCHER.Actor.Stat.Ref">{{localize "WITCHER.Actor.Stat.Ref"}}</option>
                            <option value="WITCHER.Actor.Stat.Dex">{{localize "WITCHER.Actor.Stat.Dex"}}</option>
                            <option value="WITCHER.Actor.Stat.Body">{{localize "WITCHER.Actor.Stat.Body"}}</option>
                            <option value="WITCHER.Actor.Stat.Spd">{{localize "WITCHER.Actor.Stat.Spd"}}</option>
                            <option value="WITCHER.Actor.Stat.Emp">{{localize "WITCHER.Actor.Stat.Emp"}}</option>
                            <option value="WITCHER.Actor.Stat.Cra">{{localize "WITCHER.Actor.Stat.Cra"}}</option>
                            <option value="WITCHER.Actor.Stat.Will">{{localize "WITCHER.Actor.Stat.Will"}}</option>
                            <option value="WITCHER.Actor.Stat.Luck">{{localize "WITCHER.Actor.Stat.Luck"}}</option>
                        {{/select}}
                    </select>
                    <input class="modifiers-edit" data-field="modifier" type="text" value="{{stat.modifier}}" />
                </div>
            {{/each}}
        </div>
        <div class="effect-column">
            <b>{{localize "WITCHER.Actor.StatTitle.Derived"}} </b><a class="add-modifier-derived"><i
                    class="fas fa-plus"></i></a>
            {{#each item.system.derived as |derived index|}}
                <div class="flex list-item" data-id="{{derived.id}}" data-type="derived">
                    <a class="remove-modifier-derived"><i class="fas fa-minus"></i></a>
                    <select class="modifiers-edit-derived" data-field="derivedStat">
                        {{#select derived.derivedStat}}
                            <option value="none"></option>
                            <option value="WITCHER.Actor.CoreStat.Stun">{{localize
                                    "WITCHER.Actor.CoreStat.Stun"}}</option>
                            <option value="WITCHER.Actor.CoreStat.Run">{{localize
                                    "WITCHER.Actor.CoreStat.Run"}}</option>
                            <option value="WITCHER.Actor.CoreStat.Leap">{{localize
                                    "WITCHER.Actor.CoreStat.Leap"}}</option>
                            <option value="WITCHER.Actor.CoreStat.Enc">{{localize
                                    "WITCHER.Actor.CoreStat.Enc"}}</option>
                            <option value="WITCHER.Actor.CoreStat.Rec">{{localize
                                    "WITCHER.Actor.CoreStat.Rec"}}</option>
                            <option value="WITCHER.Actor.CoreStat.woundTreshold">{{localize
                                    "WITCHER.Actor.CoreStat.woundTreshold"}}</option>
                            <option value="WITCHER.Actor.DerStat.HP">{{localize "WITCHER.Actor.DerStat.HP"}}</option>
                            <option value="WITCHER.Actor.DerStat.Sta">{{localize "WITCHER.Actor.DerStat.Sta"}}</option>
                        {{/select}}
                    </select>
                    <input class="modifiers-edit-derived" data-field="modifier" type="text"
                        value="{{derived.modifier}}" />
                </div>
            {{/each}}
        </div>
        <div class="effect-column">
            <b>{{localize "WITCHER.Monster.SkillTab"}} </b><a class="add-modifier-skill"><i class="fas fa-plus"></i></a>
            {{#each item.system.skills as |skill index|}}
                <div class="flex list-item" data-id="{{skill.id}}">
                    <a class="remove-modifier-skill"><i class="fas fa-minus"></i></a>
                    <select class="modifiers-edit-skills" data-field="skill">
                        {{selectOptions ../config.skillMap blank='' selected=skill.skill nameAttr='name' valueAttr="name" labelAttr="label" localize=true}}
                    </select>
                    <input class="modifiers-edit-skills" data-field="modifier" type="text" value="{{skill.modifier}}" />
                </div>
            {{/each}}
        </div>
    </div>
</form>